
<div class="container">

<!-- display questions -->
<h1><%= @question.title %></h1>
<br>
<br>
<p><%= @question.description %></p>
<!-- diplay comments -->
<h3>All Comments for Questions:</h3>
<p><% @q_comments.each do |comment| %>
  <br> <%= comment.description %>
<% end %></p>
<!-- add comments form to questions -->
<p><form id="addComment" action="<%= @question.id %>/comments" method="POST">
  <input type="text" name="comment_name" placeholder="Enter your comment here">
  <button type="submit" value="comment">add comment</button>
</form></p>
<!-- display answers -->
<h3>List of All Answers:</h3>
<p><div class="container">
<p><% @answers.each do |answer| %>

<%= answer.description %>
<% end %>
</p>
</div></p>
<p><form id="addAnswer" action="<%= @question.id %>/answers" method="POST">
  <input type="text" name="answer_name" placeholder="Enter your answer here">
  <button type="submit" value="answer">add answer</button>
</form></p>
<!-- add diplay comments to answers -->
<h3>All Comments for Answers:</h3>
<p><% @q_comments.each do |comment| %>
  <br> <%= comment.description %>
<% end %></p>
<!-- add comments form to answers -->
<p><form id="addComment" action="/" method="POST">
  <input type="text" name="comment_name" id="content" placeholder="Enter your comment here">
  <button type="submit" value="comment">add comment</button>
</form></p>
</div>
